#!/bin/bash
##
# Runs the whole pipeline on a Snakepit worker
# See https://github.com/mozilla/snakepit-client
#
# Usage:
# pit run "bergamot-training" "[8:g2080]"
#

set -x
set -euo pipefail

export DATA_DIR="${USER_DIR}/bergamot-training/data"
export MODELS_DIR="${USER_DIR}/bergamot-training/models"
export MARIAN="${USER_DIR}/bergamot-training/3rd_party/marian-dev/build"

bash ./run.sh
